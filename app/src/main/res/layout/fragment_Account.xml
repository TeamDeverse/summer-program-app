<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.deverse.summer_program.deversesummerprogram.ProfileViewActivity">

    <TextView
        android:hint ="John Snow"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/big_text_size"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:id="@+id/profile_username"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="NotDead@thewall.com"
        android:textSize="@dimen/big_text_size"
        android:layout_below="@+id/profile_username"
        android:id="@+id/profile_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(333) 333-3333"
        android:textSize="@dimen/big_text_size"
        android:layout_below="@+id/profile_email"
        android:id="@+id/profile_phone_number"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"

        />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_phone_number"
        android:text="Almost to your next Badge!"
        android:layout_centerHorizontal="true"
        android:id="@+id/profile_ProgressMessage"
        android:textSize="@dimen/big_text_size"
        android:layout_marginTop="20dp"

        />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profile_list"
        android:layout_below="@+id/profile_ProgressMessage"
        android:layout_marginTop="30dp"


        >

    </ListView>





</RelativeLayout>