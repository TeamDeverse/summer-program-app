<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CalendarView
        android:id="@+id/calendar"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="15dp">

    </CalendarView>

    <TextView
        android:id="@+id/date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/calendar"
        android:layout_marginTop="5dp"
        android:text="Selected Date"
        android:textSize="@dimen/big_text_size"
        />

    <LinearLayout
        android:id="@+id/list_column_headings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/date_text"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/heading_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Date"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/heading_times"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="Times"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/heading_needed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Need"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/heading_signup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Volunteer"
            android:textStyle="bold"
            />

    </LinearLayout>

    <ListView
        android:id="@+id/time_slot_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_column_headings"
        android:layout_margin="15dp">

    </ListView>

</RelativeLayout>