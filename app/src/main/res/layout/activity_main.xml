<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/login_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:textSize="25sp"
        android:text="Login:"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/login_email"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_label"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:hint="Email"
        />

    <EditText
        android:id="@+id/login_password"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_email"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:hint="Password"
        android:inputType="textPassword"
        />

    <Button
        android:id="@+id/login_button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/login_password"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="Login"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Sign Up"
        android:id= "@+id/signup_label"
        android:textSize="25sp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/login_button"
        />
    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/signup_first"
        android:layout_below="@id/signup_label"
        android:hint="First Name"
        android:layout_marginLeft="15sp"

        />
    <EditText
        android:layout_width="150dp"
        android:id="@+id/signup_last"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/signup_first"
        android:hint="Last Name"
        android:layout_below="@+id/signup_label"
        android:layout_marginLeft="15dp"

        />
    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:hint="Email Address"
        android:layout_below="@+id/signup_first"
        android:layout_marginLeft="15dp"
        android:id="@+id/signup_email"

        />
    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signup_email"
        android:id="@+id/signup_password"
        android:hint="Password"
        android:layout_marginLeft="15dp"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signup_password_confirm"
        android:layout_toRightOf="@+id/signup_password"
        android:layout_below="@+id/signup_email"
        android:layout_marginLeft="15dp"
        android:hint="Password Confirm"

        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signup_password"
        android:layout_centerHorizontal="true"
        android:text="Sign Me Up!"
        android:id="@+id/signup_button"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp" />
</RelativeLayout>