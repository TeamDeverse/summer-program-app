<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.deverse.summer_program.deversesummerprogram.HomeView_Activity">

    <TextView
        android:id="@+id/home_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textSize="50dp"
        android:text="Home"
        />

    <Button
        android:id="@+id/Account_button"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="My Account"
        android:textSize="@dimen/big_text_size"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="10dp"
        />

    <Button
        android:id="@+id/Search_button"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="Search"
        android:textSize="@dimen/big_text_size"
        android:layout_marginTop="100dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        />

    <Button
        android:id="@+id/Appointment_button"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="Sign Up"
        android:textSize="@dimen/big_text_size"
        android:layout_marginTop="275dp"
        android:layout_marginLeft="10dp"
        />

    <Button
        android:id="@+id/Sites_button"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="Sites"
        android:textSize="@dimen/big_text_size"
        android:layout_marginTop="275dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        />

    <!-- Days until next appointment in java -->
    <TextView
        android:id="@+id/days_until_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/big_text_size"
        android:text= " day until your next appointment"


        />

</RelativeLayout>
